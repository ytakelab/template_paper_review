@article{gaoDualEffect5HT1B2020,
  title = {Dual {{Effect}} of 5-{{HT1B}}/{{1D Receptors}} on {{Dopamine Neurons}} in {{Ventral Tegmental Area}}: {{Implication}} for the {{Functional Switch After Chronic Cocaine Exposure}}},
  shorttitle = {Dual {{Effect}} of 5-{{HT1B}}/{{1D Receptors}} on {{Dopamine Neurons}} in {{Ventral Tegmental Area}}},
