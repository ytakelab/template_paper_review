@article{parkResetHippocampalPrefrontal2021,
  title = {Reset of Hippocampal\textendash Prefrontal Circuitry Facilitates Learning},
  author = {Park, Alan J. and Harris, Alexander Z. and Martyniuk, Kelly M. and Chang, Chia-Yuan and Abbas, Atheir I. and Lowes, Daniel C. and Kellendonk, Christoph and Gogos, Joseph A. and Gordon, Joshua A.},
