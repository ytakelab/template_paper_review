@article{kwonAmygdalaCircuitThat2021,
  title = {An Amygdala Circuit That Suppresses Social Engagement},
  author = {Kwon, Jeong-Tae and Ryu, Changhyeon and Lee, Hyeseung and Sheffield, Alec and Fan, Jingxuan and Cho, Daniel H. and Bigler, Shivani and Sullivan, Heather A. and Choe, Han Kyung and Wickersham, Ian R. and Heiman, Myriam and Choi, Gloria B.},
