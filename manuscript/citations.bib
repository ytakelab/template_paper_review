@article{galloFurtherStudiesNorepinephrineInduced1984,
  title = {Further {{Studies}} on {{Norepinephrine}}-{{Induced Suppression}} of {{Pulsatile Luteinizing Hormone Release}} in {{Ovariectomized Rats}}},
