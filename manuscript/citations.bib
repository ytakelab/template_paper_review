}

@article{georgiouCocaineAbstinenceInduces2016,
  title = {Cocaine Abstinence Induces Emotional Impairment and Brain Region-Specific Upregulation of the Oxytocin Receptor Binding},
  author = {Georgiou, Polymnia and Zanos, Panos and Hourani, Susanna and Kitchen, Ian and Bailey, Alexis},
