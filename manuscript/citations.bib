  pmid = {32172944}
}

@article{garcia-hernandezSeptohippocampalNetworksChronic2010,
  title = {Septo-Hippocampal Networks in Chronic Epilepsy},
  author = {{Garc{\'i}a-Hern{\'a}ndez}, Antonio and Bland, Brian H. and Facelli, Julio C. and Colom, Luis V.},
  year = {2010},
