@article{citakCriticalRelationshipAntibiotic1992,
  title = {The Critical Relationship of Antibiotic Dose and Bacterial Contamination in Experimental Infection},
  author = {Citak, M. S. and Cu{\'e}, J. I. and Peyton, J. C. and Malangoni, M. A.},
  year = {1992},
