@article{boldtEvidencebasedSeverityAssessment2021,
  title = {Toward Evidence-Based Severity Assessment in Mouse Models with Repeated Seizures: {{I}}. {{Electrical}} Kindling},
  shorttitle = {Toward Evidence-Based Severity Assessment in Mouse Models with Repeated Seizures},
  author = {Boldt, Lena and Koska, Ines and {Maarten van Dijk}, R. and Talbot, Steven R. and Miljanovic, Nina and Palme, Rupert and Bleich, Andr{\'e} and Potschka, Heidrun},
  year = {2021},
  month = feb,
  volume = {115},
