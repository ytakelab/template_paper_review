@article{astashevaChangesBehaviorOscillatory2015,
  title = {Changes in the Behavior and Oscillatory Activity in Cortical and Subcortical Brain Structures Induced by Repeated L-Glutamate Injections to the Medial Septal Area in Guinea Pigs},
  author = {Astasheva, Elena and Astashev, Maksim and Kitchigina, Valentina},
  year = {2015},
  month = jan,
  volume = {109},
  pages = {134--145},
  issn = {0920-1211},
  doi = {10.1016/j.eplepsyres.2014.10.022},
  abstract = {Although the presence and importance of oscillations in cortical structures is well-documented, little is known about this rhythmic activity in subcortical areas. In waking guinea pigs, during their inattentive rest, local field potentials (LFPs) were recorded simultaneously in eight brain structures. In the cortical areas (prefrontal and entorhinal fields, hippocampus, dentate gyrus) and subcortical ones (medial and lateral septal nuclei, central nucleus of amygdala, and supramammillary nucleus), different types of oscillations were observed: delta (0.5\textendash 4Hz), theta (4\textendash 8), alpha (10\textendash 12), gamma (40\textendash 80), and high-frequency, presumable ripples (100\textendash 200Hz). In all structures, low-frequency oscillations (delta and theta) were more powerful than high-frequency ones. Structural communications in different bands of rhythmic activity were expressed differently. On the whole they were the more intensive, the stronger were the oscillations, however, this was not the absolute rule. A long-term (about a month) daily injection of l-glutamate into the medial septal region induced significant changes in theta, gamma, and high-frequency oscillations in most regions examined. The correlations of some structures also changed; they significantly decreased between the entorhinal cortex and hippocampus in the theta band and between the medial septum and central amygdala in the gamma band. During permanent septal glutamate infusion, distinct signs of epileptogenesis were revealed (epileptiform activity, seizure behavior of animals, and formation of aberrant fibers in the hippocampus). Thus, we believe that the glutamatergic system of medial septum can participate in the development of epilepsy. The earliest sign of pathology in electrical activity was alterations in high-frequency oscillations in the dentate gyrus and medial septum, but the strongest changes were in theta and especially gamma rhythms in many structures. The data obtained help to advance our understanding of the basic mechanisms of brain functioning and its disturbances in seizure pathology.},
  file = {C\:\\Users\\Lenovo\\Downloads\\1-s2.0-S0920121114003015-main.pdf},
  journal = {Epilepsy Research},
  language = {en}
}

@article{averbeckNeuralCorrelationsPopulation2006,
  title = {Neural Correlations, Population Coding and Computation},
  author = {Averbeck, Bruno B. and Latham, Peter E. and Pouget, Alexandre},
  year = {2006},
  month = may,
  volume = {7},
  pages = {358--366},
  publisher = {{Nature Publishing Group}},
  issn = {1471-0048},
  doi = {10.1038/nrn1888},
  abstract = {Correlations among neurons can affect both the amount of information encoded in a population and strategies for decoding the population. These two issues \textemdash{} encoding and decoding \textemdash{} lead to complementary perspectives about the role of correlations.In the encoding perspective, the information encoded in a population of correlated neurons is compared with the information that would be encoded if the population were uncorrelated.In the decoding perspective, the amount of information lost if correlations are ignored when decoding is measured. Note that the decoding perspective is much more subtle than the encoding perspective \textemdash{} it asks whether a potentially suboptimal strategy, ignoring correlations, really is suboptimal, and, if so, just how bad it is.If we knew only that neural responses were correlated, we would not know whether or not those correlations affected information encoding, nor would we know whether or not they affected decoding strategies. Furthermore, correlations can increase, decrease or not affect the amount of information encoded, just as they can affect or not affect the amount of information extracted using a decoder that ignores correlations.As a corollary to the previous point, the information present in neural responses, as well as the change in information due to attentional or learning-related factors, cannot be estimated by single neuron recordings.At the level of pairs of neurons, the measured effects of correlations on encoding and decoding have been small (in all but one study less than {$\sim$}10\%) across many brain areas and species.Correlations can have a large effect at the population level even when they have a small effect at the level of pairs. Consequently, results obtained for pairs of neurons cannot be directly extrapolated to populations, a fact that is true for both encoding and decoding.},
  copyright = {2006 Nature Publishing Group},
  file = {C\:\\Users\\Lenovo\\Dropbox\\zotero_sync\\Averbeck et al_2006_Neural correlations, population coding and computation.pdf},
  journal = {Nature Reviews Neuroscience},
  language = {en},
  number = {5}
}

