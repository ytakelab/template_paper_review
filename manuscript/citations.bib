@article{vargaGABABReceptorsMedian2002,
  title = {{{GABAB}} Receptors in the Median Raphe Nucleus: Distribution and Role in the Serotonergic Control of Hippocampal Activity},
  shorttitle = {{{GABAB}} Receptors in the Median Raphe Nucleus},
  author = {Varga, V and Sik, A and Freund, T. F and Kocsis, B},
  year = {2002},
