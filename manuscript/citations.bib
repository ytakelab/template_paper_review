@article{maModulationHippocampalTheta2009,
  title = {Modulation of Hippocampal Theta Oscillations and Spatial Memory by Relaxin-3 Neurons of the Nucleus Incertus},
  author = {Ma, Sherie and {Olucha-Bordonau}, Francisco E. and Hossain, M. Akhter and Lin, Feng and Kuei, Chester and Liu, Changlu and Wade, John D. and Sutton, Steven W. and Nu{\~n}ez, Angel and Gundlach, Andrew L.},
  year = {2009},
