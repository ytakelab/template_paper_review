@article{bossertRatModelOpioid2020,
  title = {In a {{Rat Model}} of {{Opioid Maintenance}}, the {{G Protein}}\textendash{{Biased Mu Opioid Receptor Agonist TRV130 Decreases Relapse}} to {{Oxycodone Seeking}} and {{Taking}} and {{Prevents Oxycodone}}-{{Induced Brain Hypoxia}}},
  author = {Bossert, Jennifer M. and Kiyatkin, Eugene A. and Korah, Hannah and Hoots, Jennifer K. and Afzal, Anum and Perekopskiy, David and Thomas, Shruthi and Fredriksson, Ida and Blough, Bruce E. and Negus, S. Stevens and Epstein, David H. and Shaham, Yavin},
